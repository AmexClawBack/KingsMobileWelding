<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Redirecting…</title>
</head>
<body>
<script>
(function(){
  var p = location.pathname.replace(/\/{2,}/g,"/");
  var m = p.match(/^\/posts\/([^\/]+)\/?$/);
  if (m && m[1]) {
    var target = "/posts/?slug=" + encodeURIComponent(m[1]);
    if (location.search) target += location.search.replace(/^\?/, "&");
    if (location.hash)   target += location.hash;
    location.replace(target);
    return;
  }
  document.write('<p>Not found. Try <a href="/blog.html">the blog</a>.</p>');
})();
</script>
</body>
</html>